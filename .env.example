# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=false

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=email-validation-api

# ============================================
# STRIPE PAYMENTS
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_FREE_PLAN_ID=price_free_plan_id
STRIPE_PREMIUM_PLAN_ID=price_premium_plan_id
STRIPE_ENTERPRISE_PLAN_ID=price_enterprise_plan_id

# ============================================
# SECURITY
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:8000
HTTPS_REDIRECT=false
HSTS_ENABLED=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# EMAIL VALIDATION
# ============================================
VALIDATION_DNS_TIMEOUT=5.0
VALIDATION_SMTP_TIMEOUT=10.0
VALIDATION_MX_CACHE_TTL=3600
VALIDATION_SKIP_EXTERNAL=false
DNS_NAMESERVERS=8.8.8.8,8.8.4.4

# SMTP Settings
SMTP_TIMEOUT=10.0
SMTP_PORTS=25,587,465
SMTP_USE_TLS=true
SMTP_SENDER=noreply@emailvalidator.com

# ============================================
# MONITORING & METRICS
# ============================================
PROMETHEUS_ENABLED=true
METRICS_PORT=8000
LOG_LEVEL=INFO

# ============================================
# BATCH PROCESSING
# ============================================
WORKER_CONCURRENCY=10
BATCH_MAX_SIZE=10000
JOB_TIMEOUT_SECONDS=3600

# ============================================
# API DOCUMENTATION
# ============================================
DOCS_ENABLED=true
DOCS_TITLE=MailSafePro Email Validation API
DOCS_VERSION=2.0.0

# ============================================
# EXTERNAL SERVICES
# ============================================
# Have I Been Pwned API (optional)
HIBP_API_KEY=your-hibp-api-key-optional

# ============================================
# DEVELOPMENT ONLY
# ============================================
DOCKER_ENV=0
RELOAD=true
